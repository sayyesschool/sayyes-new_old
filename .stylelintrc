{
	"customSyntax": "postcss-scss",
	"extends": "stylelint-config-firefoxic",
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"each",
					"for",
					"forward",
					"if",
					"include",
					"mixin",
					"use",
					"while"
				]
			}
		],
		"function-no-unknown": [
			true,
			{
				"ignoreFunctions": [
					"/^get/",
					"if"
				]
			}
		]
	}
}
