{% set image = images[name] %}
{% set formats = isDevelopment ? [image.ext] : ["avif", "webp", image.ext] %}
{% set densities = range(1, image.maxdppx, 1) %}
<picture>
	{% for format in formats -%}

		{% for size in image.sizes -%}

			{% if format != image.ext or not loop.last -%}

				<source
					{% if viewports[size.viewport] -%}
					media="(min-width: {{ viewports[size.viewport] }}px)"
					{%- endif %}
					srcset="
						{%- for dppx in densities -%}
							/assets/images/{{ name }}-{{ size.viewport }}@{{ dppx }}x.{{ format }} {{ dppx }}x
							{%- if dppx != image.maxdppx %}, {% endif -%}
						{%- endfor -%}
					"
					type="image/{{ format }}"
					width="{{ size.width }}"
					height="{{ size.height }}"
				>
			{%- else -%}
				<img
					class="{{ class }}"
					src="/assets/images/{{ name }}-{{ size.viewport }}@1x.{{ image.ext }}"
					srcset="
						{%- for dppx in densities|filter(dppx => dppx > 1) -%}
							/assets/images/{{ name }}-{{ size.viewport }}@{{ dppx }}x.{{ image.ext }} {{ dppx }}x
							{%- if dppx != image.maxdppx -%}, {% endif -%}
						{%- endfor -%}
					"
					width="{{ size.width }}"
					height="{{ size.height }}"
					alt="{{ alt }}"
				>

			{%- endif -%}

		{%- endfor -%}

	{%- endfor -%}
</picture>
