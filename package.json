{
	"name": "sayes.ru",
	"description": "Web site for Say Yes",
	"private": true,
	"type": "module",
	"engines": {
		"node": "^18.16.1"
	},
	"browserslist": [
		"last 2 versions",
		"not dead",
		"not op_mini all",
		"not and_uc > 0",
		"not < 0.2%"
	],
	"dependencies": {
		"@fontsource-variable/raleway": "^5.0.5",
		"@fontsource-variable/shantell-sans": "^5.0.5"
	},
	"scripts": {
		"prepare": "husky install",
		"preview": "pnpm prod && gulp startServer",
		"start": "pnpm dev && gulp startServer",
		"prod": "NODE_ENV=production gulp compileProject",
		"dev": "NODE_ENV=development gulp compileProject",
		"test": "node --test",
		"pretest": "pnpm --silent lint",
		"lint": "pnpm /^lint:/",
		"lint:spaces": "ec",
		"lint:scripts": "eslint .",
		"lint:styles": "stylelint \"source/sass/**/*.scss\"",
		"lint:markup": "gulp processMarkup lintBem --series --silent && cd build && html-validator --quiet"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"browser-sync": "^2.29.3",
		"del": "^7.0.0",
		"editorconfig-checker": "^5.1.1",
		"eslint": "^8.44.0",
		"gulp": "^4.0.2",
		"gulp-cached": "^1.1.1",
		"gulp-html-bemlinter": "^2.1.4",
		"gulp-htmlmin": "^5.0.1",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^9.0.1",
		"gulp-remember": "^1.0.1",
		"gulp-sass": "^5.1.0",
		"gulp-sharp-responsive": "^0.4.1",
		"gulp-stacksvg": "^2.0.2",
		"gulp-svgmin": "^4.1.0",
		"gulp-terser": "^2.1.0",
		"gulp-twig": "^1.2.0",
		"husky": "^8.0.3",
		"postcss": "^8.4.25",
		"postcss-csso": "^6.0.1",
		"postcss-scss": "^4.0.6",
		"postcss-url": "^10.1.3",
		"sass": "^1.63.6",
		"stylelint": "^15.10.1",
		"stylelint-config-firefoxic": "^2.0.0",
		"w3c-html-validator": "^1.4.0"
	}
}
